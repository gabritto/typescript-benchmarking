{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "es2021",
        "lib": ["es2021"],
        "types": ["node"],
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "useUnknownInCatchVariables": false,
        "noUnusedLocals": true
    }
}
